<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hosted Events</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        h1 {
            color: #333;
        }
        ul {
            list-style: none;
            padding: 0;
        }
        li {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <h1>Hosted Events</h1>
    
    <% if (events.length) { %>
        <ul>
            <% events.forEach(event => { %>
                <li>
                    <strong><%= event.name %></strong><br>
                    <em>Date:</em> <%= new Date(event.date).toLocaleString() %><br>
                    <em>Location:</em> <%= event.location %>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No events hosted yet.</p>
    <% } %>
</body>
</html>
